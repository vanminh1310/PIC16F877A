#include <16F877a.h>
#FUSES NOWDT, HS, PUT, NOPROTECT,
#use DELAY(clock=20000000)
#use rs232(baud=9600,xmit=pin_c6,rcv=pin_c7) 
#use fast_io(b)
#byte portb=0x06 
#byte intcon=0x000B
#bit RBIF=intcon.0 //dinh nghia co ngat RB
#bit RBIE=intcon.3 //dinh nghia bit cho phep ngat RB
#define tb1 PIN_B0
#define tb2 PIN_B1
#define tb3 PIN_B2
#define tb4 PIN_B3

#define btn1 PIN_B7
#define btn2 PIN_B6
#define btn3 PIN_B5
#define btn4 PIN_B4

char data;
#int_RB
void button(){
if(input(btn1)==0){
putc('a');
break;
}
 if(input(btn2)==0){
putc('b');
break;
}
if(input(btn3)==0){
putc('c');
break;
}
if(input(btn4)==0){
putc('d');
break;
}
}

void main()
{
SET_TRIS_B(0b00001111);
//output_b(0x00);
enable_interrupts(global);
enable_interrupts(int_RB);
ext_int_edge(H_to_L);
while(true)
{ 

}
}
