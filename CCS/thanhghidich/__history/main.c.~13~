#include<16f877A.h>
#fuses NOWDT,HS,PUT,NOPROTECT
#use delay(clock=20000000)

#define SH  PIN_B0
#define DS  PIN_B1
#define ST  PIN_B2

int8 nData;
void SpiInit(void);
void SpiShiftByte(int8 nData);
void SpiWriteByte(int8 nData);
void OnLow2High(void);


void main(void)
{   set_tris_c(0x00);
    SpiInit();
    
   SpiWriteByte(0x00);
   
   Delay_ms(10);

   SpiWriteByte(0xFF);
   Delay_ms(10);

   nData = 0;
    while(1)
    {
      OnLow2High();
       Delay_ms(100);
    };      //while
}

void SpiInit(void)
{
     output_low(SH);
     output_low(DS);
     output_low(ST);
}

void SpiShiftByte(int8 nData)
{
   int8 i,nMask;
    nMask = 0x80;
    
    for(i=0;i<8;i++)
    {
        output_low(SH);
        
        if(nData & nMask)
         output_high(DS);
        else
            output_low(DS);
            
        output_high(SH);
       Delay_us(1);
        output_low(SH);
        
        nMask = nMask >> 1;
    }
}

void SpiWriteByte(int8 nData)
{
   output_low(ST);
   SpiShiftByte(nData);
   output_high(ST);
}

void OnLow2High(void)
{
   SpiWriteByte(nData);

   if(nData == 255)
      nData = 0;
   else
   {
      nData = nData << 1;
      nData = nData | 1;
   }
}

