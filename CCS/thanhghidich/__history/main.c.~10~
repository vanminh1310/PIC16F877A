#include <16f877A.h>
#fuses NOWDT,HS,PUT,NOPROTECT
#use delay(clock=20000000)
#define SH PIN_B0 // khai baos chan 11
#define DS PIN_B1 // 14
#define ST PIN_B2 // 12

int8 nData;
void setup();
void thaydoi(int8 nData);
void writebye(int8 nData);
void OnLow2High(void);

void main()
{
set_tris_c(0x00); // set port b la ouput 
setup();
writebye(0x00);
  Delay_ms(10);
  writebye(0xff);
  Delay_ms(10);
     nData = 0;
   while(TRUE)
   {
      OnLow2High();
       Delay_ms(100);
      
   }

}
void setup(){
   output_low(SH);
   output_low(DS);
   output_low(ST);
   // set cacs chan deu la muc low
}
void thaydoi(int8 nData){
int8 i, nMask;
   nMask = 0x01;
   for (i = 0; i<8; i++){
   output_low(SH); // chan 11 o muc thap
   if(nData & nMask){
   //neeu nData and voi Nmask thi dua chan 14 len muc cao 
    output_high(DS);   
    }
    else{
    output_low(DS);
    }
    
       output_high(SH);
       Delay_us(1);
        output_low(SH);
          nMask = nMask >> 1;
   
 
}

}
void writebye(int8 nData){
 output_low(ST);
   thaydoi(nData);
   output_high(ST);
}
void OnLow2High(void)
{
   writebye(nData);

   if(nData == 255)
      nData = 0;
   else
   {
      nData = nData << 1;
      nData = nData | 1;
   }
}


