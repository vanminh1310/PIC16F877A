#include <16F877A.h>
#fuses NOWDT, PUT, XT, NOPROTECT
#use delay(clock = 8000000)
#use fast_io(b)
     
#byte intcon = 0x000B
#define RB4 PIN_B4
#define RB5 PIN_B5
#define RB6 PIN_B6
#define RB7 PIN_B7

#define  Wire1 PIN_D0
#define  Wire2 PIN_D1
int16 duty_cycle;//

#bit RBIF = intcon .0 //dinh nghia co ngat RB
#bit RBIE = intcon .3 //dinh nghia bit cho phep ngat RB
#int_RB
void ngat_RB()
{
    if ((RBIF) && (RBIE))
    {
        //Kiem tra sw1
        {
            if (input(RB4) == 0)//start thuan
            { 
                output_high(Wire1);   // chon chieu quay cua dong co         
                output_low (Wire2);  
         
            }
        }
        //Kiem tra sw2
        {
            if (input(RB5) == 0) // stop
            {
                 output_low(Wire1);      
                  output_low (Wire2);  
            }
           
        }
        //Kiem tra sw3
        {
            if (input(RB6) == 0)// thuan
            {
              output_high(Wire1);   // chon chieu quay cua dong co         
                output_low (Wire2);  
       
              
            }
           
        }
        //Kiem tra sw4
        {
            if (input(RB7) == 0) // nghich
            {
                 output_low(Wire1);   // chon chieu quay cua dong co         
                output_high(Wire2);  
            }
           
        }
        RBIF = 0; //Xoa co ngat RB
         output_low(Wire1);   // chon chieu quay cua dong co         
        output_low(Wire2);  
    }
}
void main()
{
 
 
    PORT_B_PULLUPS(0XFF);
    set_tris_b(0b11110000); // rb_4-rb7 input
 
    enable_interrupts(global);
    enable_interrupts(int_RB);
    ext_int_edge(H_to_L);
    //pwm
    setup_timer_2(T2_DIV_BY_4, 124,1);  // f=fosc/[4*mode*(period+1)]?
     setup_ccp1(CCP_PWM);// chon che do pwm 
       set_pwm1_duty(300);          // 20% (Half Speed)
   set_tris_d(0x00);
  
    }

